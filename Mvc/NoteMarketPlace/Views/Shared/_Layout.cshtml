<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no">
    <title>@ViewBag.Title - NoteMarketPlace</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/logo/favicon.ico">

    <!--Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

    <!--bootstrap css-->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
</head>
<body>
    <!-- Header -->
    <section id="nav-bar" class="home_navbar">
        <nav class="navbar navbar-expand-lg navbar-light ">
            <a class="navbar-brand" href="#">
                <img src="~/Content/images/logo/logo-white.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="SearchNotes">Search Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="dashboard.html">Sell Your Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="faq.html">FAQ</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact Us","Contact","Home",null, new { @class = "nav-link"})
                    </li>
                    <li class="nav-item">
                        @if (Session["EmailID"] == null)
                        {
                            <button type="submit" class="btn btn-primary btn-lg btn-block btn_login"><a href="../Account/Login">Login</a></button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary btn-lg btn-block btn_login"><a href="../Account/Logout">Logout</a></button>
                        }
                    </li>

                </ul>

            </div>
        </nav>
    </section>
    <!-- Header End -->

    <div>
        @RenderBody()
        <hr />
        <!--    footer  -->
        <section class="footer">
            <div class="container">

                <div class="row">
                    <div class="col-md-6 footer_content" style="width: 60%;">
                        <p>Copyright © <a href="https://www.tatvasoft.com/">TatvaSoft</a> All Rights Reserved.</p>
                    </div>
                    <div class="col-md-6 footer_social text-right" style="width: 40%;">
                        <ul class="social-list">
                            <li>
                                <a href="#">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fab fa-google-plus-g"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- footer end -->
    </div>

    <!-- Jquery Js -->
    <script type="text/javascript" src="~/Scripts/js/jquery.min.js"></script>

    <!-- popper Js  -->
    <script type="text/javascript" src="~/Scripts/js/popper.min.js"></script>

    <!-- Bootstrap Js -->
    <script type="text/javascript" src="~/Scripts/js/bootstrap.min.js"></script>

    <!--custom script-->
    <script type="text/javascript" src="~/Scripts/js/script.js"></script>
</body>
</html>