@model IEnumerable<NoteMarketPlaceHtml.Models.MyRejectedNoteViewModel>

@{
    ViewBag.Title = "MyRejectedNotes";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<section class="dashboard_top dashboard_table">
    <div class="container">
        <div class="row">
            <div class="download_heading col-md-4 col-sm-6 col-12">My Downloads</div>
            <div class="col-md-8 col-sm-6 col-12">
                <div class="search-note">

                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-7">
                            <div class="search">
                                <img src="~/Content/img/Search/search.jpg" />
                                <input type="search" class="form-control" placeholder="Search" id="searchbox">
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-4 col-5 search_button">
                            <button type="button" class="btn btn-primary searc_btn">Search</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <hr />
        <div class="row ">
            <table class="table table-hover table-responsive" id="inProgresstbl">
                <thead>
                    <tr class="text-uppercase">
                        <th scope="col" style="width: 5%;">SR NO.</th>
                        <th scope="col" width= "150px;">NOTE TITLE</th>
                        <th scope="col" width= "150px;">category</th>
                        <th scope="col" width="350px;">REMARKS</th>
                        <th scope="col" width= "150px;">CLONE</th>
                        <th ></th>


                    </tr>
                </thead>
                <tbody>
                    @{ if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="6" style="text-align:center">No Data Available</td>
                            </tr>
                        }
                        else
                        {
                            int cnt = 0;
                            foreach (var data in Model)
                            {
                                cnt++;
                <tr>
                    <td scope="row">@cnt</td>
                    <td class="purple_text">@data.Title</td>
                    <td>@data.Category</td>
                    <td class="purple_text">@data.Remark</td>
                    <td onclick="CloneNote(@data.Id)" class="purple_text">Clone</td>

                    <td>
                        <div class="dropdown">

                            <img id="more-dropeddown" src="~/Content/img/Search/dots.png" alt="more"
                                 data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="dropdown-menu more-dropdown-menu" aria-labelledby="more-dropeddown">
                                <a class="dropdown-item" onclick="Download(@data.Id)">Download Note</a>
                            </div>
                        </div>
                    </td>


                </tr>
                            }


                        } }


                </tbody>
            </table>
        </div>
    </div>
</section>
<script>

   

    function Download(id) {
        location.href = "DownloadNote?noteId=" + id;
    }

</script>