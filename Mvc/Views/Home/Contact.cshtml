@model NoteMarketPlace.Models.ContactModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/fixed_layout.cshtml";
}
<div class="banner-image x-t-100">
    <div class="banner-text">
        <h1>Contact Us</h1>
    </div>
</div>
@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="container form-wrap">
        <div>

            <div class="contact-heading">
                <h3>Get in Touch</h3>
                <p>Let us know how to get back to you</p>
            </div>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputfname">Full Name *</label>
                        @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your full name" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputfname">Email Address *</label>
                        @Html.TextBoxFor(model => model.EmailID, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your email address" })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputfname">Subject *</label>
                        @Html.TextBoxFor(model => model.Subject, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your subject" })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group col-md-6">

                    <label for="exampleInputfname">Comments / Questions *</label>
                    @Html.TextAreaFor(model => model.Comments, htmlAttributes: new { style = "height:89%", @class = "form-control", @placeholder = "Comments..." })
                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })



                </div>

            </div>

                <button type="submit" class="btn btn-primary x-t-30 m-b-60" id="submit-btn-user" value="Contact">SUBMIT</button>

            </div>
        </div>
    
}